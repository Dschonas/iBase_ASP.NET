@model IEnumerable<iBase_ASP_DOT_NET.Models.PlaylistTable>

@{
    ViewBag.Title = "Index";
}

<h2>Playlists <a style="float: right" href="Playlist/Create" class="btn btn-secondary" role="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
</h2>
<table class="table" style="max-width: 80%; margin: 0 auto; margin-top: 3em;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            By user
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserTable.Username)
        </td>
        <td class="edit">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>@Html.ActionLink("Edit", "Edit", new { id = item.Id })<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>@Html.ActionLink("Details", "Details", new { id = item.Id })<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>@Html.ActionLink("Delete", "Delete", new { id = item.Id })<span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>@Html.ActionLink("Show Tracks", "Index", "PlaylistTrack", new { playlist = item.Id }, new { })
        </td>
    </tr>
}

</table>

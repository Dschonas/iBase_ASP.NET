@model IEnumerable<iBase_ASP_DOT_NET.Models.PlaylistHasTracks>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlaylistTable.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrackTable.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlaylistTable.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrackTable.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

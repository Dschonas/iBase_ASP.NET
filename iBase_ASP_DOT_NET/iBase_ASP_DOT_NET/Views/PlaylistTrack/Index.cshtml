@model IEnumerable<iBase_ASP_DOT_NET.Models.PlaylistHasTracks>

@{
    ViewBag.Title = "Index";
}

<h2>Tracks in your playlist</h2>

@using (Html.BeginForm("Index", "Track", FormMethod.Get))
{
    <div class="filterbox">
        <input name="popularity" type="number" placeholder="Popularity bigger than" style="float: left" class="btn btn-default"/>
        <div class="form-horizontal">
            <div class="input-group">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Search by name ..." })
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-secondary" value="Search" />
                </span>
            </div>
        </div>
    </div>
}
@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-4 col-xs-6">
        <div class="thumbnail thumbnail-index">
            <img class="albumart" src="http://orig01.deviantart.net/26aa/f/2011/185/f/9/no_cover_itunes_by_stainless2-d3kxnbe.png" alt="@Html.DisplayFor(modelItem => item.TrackTable.ImageURL)">
            <audio controls class="controls">
                <source src="@Html.DisplayFor(modelItem => item.TrackTable.PreviewURL)" type="audio/mp3">
                Your browser does not support the audio element.
            </audio>
            <div class="caption">
                <h4>@Html.DisplayFor(modelItem => item.TrackTable.Name)</h4>
                <p>
                    <span class="flexed">
                        <b>Album:</b> @Html.DisplayFor(modelItem => item.TrackTable.Album)
                        <span class="text-right">
                            Disc @Html.DisplayFor(modelItem => item.TrackTable.DiscNumber)/
                            <span class="glyphicon glyphicon-music" aria-hidden="true"></span>@Html.DisplayFor(modelItem => item.TrackTable.TrackNumber)
                        </span>
                    </span>
                </p>
                <p>
                    <span class="flexed">
                        <b>Duration:</b> @Html.DisplayFor(modelItem => item.TrackTable.DurationMS)
                        <span class="text-right">Explicity @Html.DisplayFor(modelItem => item.TrackTable.Explicity)</span>
                    </span>
                </p>
                <p>
                    <span class="flexed">
                        <b>Popularity:</b> @Html.DisplayFor(modelItem => item.TrackTable.Popularity)%
                        <span class="text-right">Link: <a class="tracklink glyphicon glyphicon-new-window" aria-hidden="true" href="@Html.DisplayFor(modelItem => item.TrackTable.Href)"></a></span>
                    </span>
                </p>
                <p><b>Type:</b> @Html.DisplayFor(modelItem => item.TrackTable.Type)</p>
                <p><b>Artist:</b> @Html.DisplayFor(modelItem => item.TrackTable.ArtistTable.Name)</p>
                <div class="edit" style="text-align: center">
                    <div style="display: inline-block;">
                        <span class="btn-left glyphicon glyphicon-pencil" aria-hidden="true"></span>@Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        <span class="btn-right glyphicon glyphicon-info-sign" aria-hidden="true"></span>@Html.ActionLink("Details", "Details", new { id = item.Id })
                        <span class="btn-right glyphicon glyphicon-remove" aria-hidden="true"></span>@Html.ActionLink("Remove", "Delete", new { id = item.Id })
                    </div>
                </div>
            </div>
        </div>
    </div>
}